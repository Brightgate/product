if [ "x$0" = "xconfigure" ]; then
    # Disable services that collide with our use, or that we want to manage
    # directly.
    systemctl disable avahi-daemon.service
    systemctl disable dnsmasq.service
fi

# Some other abort action was received.
exit 0
