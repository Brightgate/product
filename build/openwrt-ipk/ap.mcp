START=60
STOP=70

USE_PROCD=1
PROG=/opt/com.brightgate/bin/ap.mcp

IDDIR=/data/mcp
IDFILE=${IDDIR}/machine-id

set_hostname () {
	echo "$1" > /proc/sys/kernel/hostname
}

start_service()
{
	# Mount /data, if not already mounted.
	/bin/df -T /data | /usr/bin/tail -1 | /bin/grep -q f2fs
	if [ $? != 0 ]; then
		/usr/bin/mount /data
	fi

	# Apply U-Boot Ethernet address to interface.
	eval $(/usr/sbin/fw_printenv ethaddr)
	/sbin/ip link set dev eth0 address "$ethaddr"
	/sbin/uci set "network.eth0.macaddr=$ethaddr"

	# Machine ID handling.
	if [ ! -d ${IDDIR} ]; then
		/bin/mkdir -p ${IDDIR}
	fi

	if [ ! -f ${IDFILE} ]; then
		MACHINE_ID=$(/usr/bin/uuidgen)
		OPTS="-nodeid $MACHINE_ID"
		set_hostname "$MACHINE_ID"
	else
		set_hostname "`cat < $IDFILE`"
	fi

	# Start service via procd.
	procd_open_instance
	procd_set_param stdout 1
	procd_set_param stderr 1
	procd_set_param command "${PROG}" "${OPTS}"
	procd_set_param respawn
	procd_close_instance
}
