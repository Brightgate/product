if [ "x$0" = "xremove" ]; then
    # Enable the services we normally disable.
    systemctl enable avahi-daemon.service
    systemctl enable dnsmasq.service
fi

# Otherwise we are upgrading to $1, and we will leave the services undisturbed.
exit 0
