{
  "name": "@brightgate/web-client",
  "version": "0.0.1",
  "description": "Administrative Client for Brightgate Appliance",
  "author": "Brightgate, Inc.",
  "license": "UNLICENSED",
  "private": "true",
  "scripts": {
    "watchify": "cross-env watchify -vd -p [ browserify-hmr -p ${WATCHIFY_PORT:-3123} -h '0.0.0.0' -u http://$(hostname -f):${WATCHIFY_PORT:-3123} ] -e src/main.js -o dist/js/build.js",
    "serve": "cross-env http-server -p ${DEV_HTTP_PORT:-8801} -o -c 1 dist/",
    "dev": "npm-run-all --parallel watchify serve",
    "build:dir": "rm -fr dist && mkdir -p dist/js dist/css dist/fonts dist/img",
    "build:f7-assets": "rsync -a node_modules/framework7/dist/css/framework7* dist/css/",
    "build:f7-css": "rsync -a node_modules/framework7-icons/css/ dist/css/",
    "build:f7-fonts": "rsync -a node_modules/framework7-icons/fonts/ dist/fonts/",
    "build:www-assets": "rsync -a src/html/* dist/ && rsync -a src/css/ dist/css/ && rsync -a --exclude=README.md src/img/ dist/img/",
    "build:browserify": "cross-env NODE_ENV=development browserify -g envify -p [ vueify/plugins/extract-css -o dist/css/build.css ] -e src/main.js > dist/js/build.js",
    "eslint": "eslint --ext .js,.vue ./src",
    "eslint-fix": "eslint --fix --ext .js,.vue ./src",
    "licenses": "license-checker --production",
    "build": "npm-run-all -l -s build:dir -p build:www-assets build:f7-assets build:f7-fonts build:f7-css build:browserify eslint"
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  },
  "browserify": {
    "transform": [
      "babelify",
      "vueify"
    ]
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "bluebird-retry": "^0.11.0",
    "browser-locale": "^1.0.3",
    "email-validator": "^2.0.0",
    "framework7": "^2.1.3",
    "framework7-icons": "^0.8.9",
    "framework7-vue": "^2.1.2",
    "libphonenumber-js": "^1.1.5",
    "lodash": "^4.17.5",
    "moment": "^2.22.0",
    "superagent": "^3.8.2",
    "superagent-bluebird-promise": "^4.2.0",
    "vue": "^2.5.16",
    "vue-i18n": "^7.6.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.22.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^8.0.0",
    "browserify": "^16.1.0",
    "browserify-css": "^0.14.0",
    "browserify-hmr": "^0.3.6",
    "cross-env": "^5.1.4",
    "envify": "^4.1.0",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-vue": "^4.4.0",
    "http-server": "^0.11.1",
    "license-checker": "^16.0.0",
    "npm-run-all": "^4.1.2",
    "proxyquireify": "^3.2.1",
    "uglify-js": "^3.3.16",
    "vue-template-compiler": "^2.5.16",
    "vueify": "^9.4.1",
    "watchify": "^3.10.0"
  }
}
